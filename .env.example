# API密钥
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# 服务配置
PORT=8001
GIN_MODE=debug  # 生产环境请使用 "release"

# 数据路径配置
DATA_ROOT_PATH=/data  # 数据存储的根路径

# 存储配置
REPOSITORY_PATH=/data/repos  # 仓库存储路径
DATABASE_PATH=/data/databases  # 数据库存储路径

# 安全配置
JWT_SECRET=your_jwt_secret_key_here  # JWT令牌密钥

# 缓存配置
CACHE_ENABLED=true  # 启用缓存
CACHE_TTL=86400  # 缓存过期时间（秒）

# 并发配置
MAX_CONCURRENT_CLONES=3  # 最大并发克隆任务数

# 日志配置
LOG_LEVEL=info  # 日志级别（debug, info, warn, error）

# 限流配置
RATE_LIMIT=100  # 每分钟API请求次数限制 